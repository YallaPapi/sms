# SMS Platform Configuration

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sms_platform
DB_USER=postgres
DB_PASSWORD=your_password_here

# Server Configuration
PORT=4000
NODE_ENV=production
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SMS Rate Limiting
SMS_RATE_LIMIT_PER_DEVICE=60
SMS_RATE_LIMIT_WINDOW_MS=60000

# Campaign Settings
MAX_CAMPAIGN_RECIPIENTS=10000
DEFAULT_DRIP_INTERVAL_MINUTES=5

# Device Settings
DEVICE_TIMEOUT_MINUTES=10
MAX_MESSAGE_QUEUE_PER_DEVICE=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/sms-platform.log

# Security
BCRYPT_SALT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Admin bootstrap (first-run initialization; optional)
ADMIN_INIT_USERNAME=admin
ADMIN_INIT_PASSWORD=change_me_first_run_only

# Android ADB Settings (if using USB devices)
ADB_PATH=/usr/local/bin/adb
ANDROID_DEVICE_POLL_INTERVAL_MS=30000

# WebUSB Settings (if using USB modems)
WEBUSB_VENDOR_FILTERS=0x12d1,0x19d2,0x1546,0x2c7c,0x1e0e

# Monitoring & Health Checks
HEALTH_CHECK_INTERVAL_MS=30000
DEVICE_HEALTH_CHECK_INTERVAL_MS=60000

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_PATH=./uploads

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=SMS Platform <noreply@smsplatform.com>

# Webhook Settings (optional)
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_TIMEOUT_MS=10000

# Redis (optional - for caching and session storage)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Analytics & Metrics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# Development Settings
ENABLE_DEBUG_LOGS=false
ENABLE_MOCK_DEVICES=false
MOCK_DEVICE_COUNT=3

# Task Master AI API Keys (for development workflow)
ANTHROPIC_API_KEY="your_anthropic_api_key_here"       # Required: Format: sk-ant-api03-...
PERPLEXITY_API_KEY="your_perplexity_api_key_here"     # Optional: Format: pplx-...
OPENAI_API_KEY="your_openai_api_key_here"             # Optional, for OpenAI models. Format: sk-proj-...
GOOGLE_API_KEY="your_google_api_key_here"             # Optional, for Google Gemini models.
MISTRAL_API_KEY="your_mistral_key_here"               # Optional, for Mistral AI models.
XAI_API_KEY="YOUR_XAI_KEY_HERE"                       # Optional, for xAI AI models.
GROQ_API_KEY="YOUR_GROQ_KEY_HERE"                     # Optional, for Groq models.
OPENROUTER_API_KEY="YOUR_OPENROUTER_KEY_HERE"         # Optional, for OpenRouter models.
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional, for Azure OpenAI models (requires endpoint in .taskmaster/config.json).
OLLAMA_API_KEY="your_ollama_api_key_here"             # Optional: For remote Ollama servers that require authentication.
GITHUB_API_KEY="your_github_api_key_here"             # Optional: For GitHub import/export features. Format: ghp_... or github_pat_...
