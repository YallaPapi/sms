{
  "name": "sms-drip-campaign-platform",
  "version": "1.0.0",
  "description": "Multi-Device SMS Drip Campaign Platform - Production-ready platform for managing SMS campaigns across multiple devices",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "start:dev": "tsx src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "migrate": "tsx src/database/migrate.ts",
    "seed": "tsx src/database/seed.ts",
    "docker:build": "docker build -t sms-platform-backend .",
    "docker:run": "docker run -p 3000:3000 sms-platform-backend"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "nodemailer": "^6.9.4",
    "multer": "^1.4.5-lts.1",
    "csv-parser": "^3.0.0",
    "xlsx": "^0.18.5",
    "node-cron": "^3.0.2",
    "socket.io": "^4.7.2",
    "redis": "^4.6.8",
    "ioredis": "^5.3.2",
    "bull": "^4.11.3",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/compression": "^1.7.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/pg": "^8.10.2",
    "@types/multer": "^1.4.7",
    "@types/node-cron": "^3.0.8",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "^0.2.31",
    "@types/jest": "^29.5.4",
    "@types/supertest": "^2.0.12",
    "typescript": "^5.1.6",
    "tsx": "^3.12.7",
    "tsc-alias": "^1.8.7",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "prettier": "^3.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1"
  },
  "keywords": [
    "sms",
    "drip-campaign",
    "marketing",
    "automation",
    "nodejs",
    "typescript",
    "express"
  ],
  "author": "SMS Platform Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}